  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start TS Server",
      "program": "${workspaceFolder}/server/src/server.ts",
      "request": "launch",
      "preLaunchTask": "tsc: build - server/tsconfig.json",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
      "type": "node",
      "envFile": "${workspaceFolder}/server/dev.env"
    },
    {
      "name": "Watch TS Server",
      "program": "${workspaceFolder}/server/src/server.ts",
      "request": "launch",
      "preLaunchTask": "tsc: watch - server/tsconfig.json",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
      "type": "node",
      "envFile": "${workspaceFolder}/server/dev.env"
    },
    {
      "name": "Start Go Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/go-server",
      "env": {},
      "args": []
    }
  ]
}
